{% block music %}

	<div id="music-player" class="music-player bg-dark">
		<h5 id="track" class="text-white text-center h5">Reproduce el Podcast que desees</h5>
		<div class="row text-center align-items-center">
			<div class="col-md-3 align-items-center">
				<button id="previous" class="btn btn-secondary py-2 rounded-pill h-45 w-45">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-skip-start-fill" viewbox="0 0 16 16">
						<path d="M4 4a.5.5 0 0 1 1 0v3.248l6.267-3.636c.54-.313 1.232.066 1.232.696v7.384c0 .63-.692 1.01-1.232.697L5 8.753V12a.5.5 0 0 1-1 0V4z"/>
					</svg>
				</button>
				<button id="playBtn" class="btn btn-secondary py-2 rounded-pill h-45 w-45">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-play-fill" viewbox="0 0 16 16">
						<path d="m11.596 8.697-6.363 3.692c-.54.313-1.233-.066-1.233-.697V4.308c0-.63.692-1.01 1.233-.696l6.363 3.692a.802.802 0 0 1 0 1.393z"/>
					</svg>
				</button>
				<button id="pauseBtn" class="btn btn-secondary py-2 rounded-pill h-45 w-45">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pause-fill" viewbox="0 0 16 16">
						<path d="M5.5 3.5A1.5 1.5 0 0 1 7 5v6a1.5 1.5 0 0 1-3 0V5a1.5 1.5 0 0 1 1.5-1.5zm5 0A1.5 1.5 0 0 1 12 5v6a1.5 1.5 0 0 1-3 0V5a1.5 1.5 0 0 1 1.5-1.5z"/>
					</svg>
				</button>
				<button id="next" class="btn btn-secondary py-2 rounded-pill h-45 w-45">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-skip-end-fill" viewbox="0 0 16 16">
						<path d="M12.5 4a.5.5 0 0 0-1 0v3.248L5.233 3.612C4.693 3.3 4 3.678 4 4.308v7.384c0 .63.692 1.01 1.233.697L11.5 8.753V12a.5.5 0 0 0 1 0V4z"/>
					</svg>
				</button>
			</div>

			<div class="col-md-6 row d-flex justify-content-around align-items-center">
				<div id="timer" class="col-3 text-white">00:00:00</div>
				<input id="progress" class="col-6" type="range" min="0" max="100" step="1"/>
				<div id="duration" class="col-3 text-white">00:00:00</div>
			</div>

			<div class="col-md-3 d-flex justify-content-around align-items-center">
				<input id="volume" class="w-50" type="range" / min="0" max="10" value="10" step="1">
				<button id="silence" class="btn btn-secondary py-2 rounded-pill h-45 w-45">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-volume-up-fill" viewbox="0 0 16 16">
						<path d="M11.536 14.01A8.473 8.473 0 0 0 14.026 8a8.473 8.473 0 0 0-2.49-6.01l-.708.707A7.476 7.476 0 0 1 13.025 8c0 2.071-.84 3.946-2.197 5.303l.708.707z"/>
						<path d="M10.121 12.596A6.48 6.48 0 0 0 12.025 8a6.48 6.48 0 0 0-1.904-4.596l-.707.707A5.483 5.483 0 0 1 11.025 8a5.483 5.483 0 0 1-1.61 3.89l.706.706z"/>
						<path d="M8.707 11.182A4.486 4.486 0 0 0 10.025 8a4.486 4.486 0 0 0-1.318-3.182L8 5.525A3.489 3.489 0 0 1 9.025 8 3.49 3.49 0 0 1 8 10.475l.707.707zM6.717 3.55A.5.5 0 0 1 7 4v8a.5.5 0 0 1-.812.39L3.825 10.5H1.5A.5.5 0 0 1 1 10V6a.5.5 0 0 1 .5-.5h2.325l2.363-1.89a.5.5 0 0 1 .529-.06z"/>
					</svg>
				</button>
			</div>
		</div>
	</div>
{% endblock %}
